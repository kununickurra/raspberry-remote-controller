									<!-- target -->
									<outputDirectory>${basedir}/target/classes</outputDirectory>
									<resources>
										<resource>
											<!-- source -->
											<directory>${basedir}/config/hackathon</directory>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>raspberry-relay-board</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.iot</groupId>
					<artifactId>raspberry-ctrl-service-impl</artifactId>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
