									<!-- target -->
									<outputDirectory>${basedir}/target/classes</outputDirectory>
									<resources>
										<resource>
											<!-- source -->
											<directory>${basedir}/config/raspberry-relay-board</directory>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
